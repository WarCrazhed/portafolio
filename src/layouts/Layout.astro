---
import Navbar from "../components/Layout/Navbar.astro";
import Networks from "../components/Networks.astro";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Portafolio Mario Zamora</title>
    <script>
      if (
        localStorage.theme === "dark" ||
        (!("theme" in localStorage) &&
          window.matchMedia("(prefers-color-scheme: dark)").matches)
      ) {
        document.documentElement.classList.add("dark");
      } else {
        document.documentElement.classList.remove("dark");
      }
    </script>
    <style>
      @import url("https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap");
      * {
        font-family: "Montserrat";
      }
    </style>
  </head>
  <body
    class="bg-gradient-to-br dark:bg-gradient-to-br from-gray-200 via-blue-200 to-purple-200 dark:from-blue-950 dark:via-purple-950 dark:to-blue-950 bg-cover dark:text-white"
  >
    <Navbar />
    <slot />
    <footer
      class="bg-gray-950 py-16 w-full flex flex-col md:flex-row lg:flex-row justify-start gap-3 items-center border-t border-t-gray-800"
    >
      <div class="container m-auto max-w-4xl">
        <div
          class="flex flex-col lg:flex-row justify-between items-center my-5 gap-8"
        >
          <div class="text-white text-sm text-center lg:text-left">
            <p class="font-medium text-xl">
              <span
                class="transition-all duration-200 bg-gradient-to-r from-blue-300 to-purple-300 bg-clip-text hover:text-transparent font-bold"
                >Mario Zamora
              </span>
            </p>
            <p class="text-xs">
              Â©{new Date().getFullYear()} Casi todos los derechos reservados
            </p>
          </div>
          <div class="text-white">
            <Networks />
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
