import ExperienceItem from "./ExperienceItem.astro";
---

<section class="min-h-screen container mx-auto flex flex-col gap-12 max-w-4xl">
    <!-- Título -->
    <div class="flex items-center gap-3">
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-8 h-8 text-blue-500">
        <path fill-rule="evenodd" d="M7.5 5.25a3 3 0 0 1 3-3h3a3 3 0 0 1 3 3v.205c.933.085 1.857.197 2.774.334 1.454.218 2.476 1.483 2.476 2.917v3.033c0 1.211-.734 2.352-1.936 2.752A24.726 24.726 0 0 1 12 15.75c-2.73 0-5.357-.442-7.814-1.259-1.202-.4-1.936-1.541-1.936-2.752V8.706c0-1.434 1.022-2.7 2.476-2.917A48.814 48.814 0 0 1 7.5 5.455V5.25Zm7.5 0v.09a49.488 49.488 0 0 0-6 0v-.09a1.5 1.5 0 0 1 1.5-1.5h3a1.5 1.5 0 0 1 1.5 1.5Zm-3 8.25a.75.75 0 1 0 0-1.5.75.75 0 0 0 0 1.5Z" clip-rule="evenodd" />
        <path d="M3 18.4v-2.796a4.3 4.3 0 0 0 .713.31A26.226 26.226 0 0 0 12 17.25c2.892 0 5.68-.468 8.287-1.335.252-.084.49-.189.713-.311V18.4c0 1.452-1.047 2.728-2.523 2.923-2.12.282-4.282.427-6.477.427a49.19 49.19 0 0 1-6.477-.427C4.047 21.128 3 19.852 3 18.4Z" />
      </svg>
      <h2 class="text-3xl font-bold text-slate-800 dark:text-slate-200">Experiencia Laboral</h2>
    </div>
  
    <!-- Línea de tiempo -->
    <div class="relative flex flex-col space-y-12">
      <div class="absolute left-2 top-0 bottom-0 w-px bg-gray-300"></div>
      <!-- Instancias de elementos de experiencia -->
      <ExperienceItem 
        puesto="Desarrollador FullStack" 
        empresa="TechCorp" 
        fecha="Enero 2020 - Marzo 2023" 
        descripcion="Desarrollo de aplicaciones web escalables con tecnologías modernas como React, Node.js y Django. Implementación de soluciones basadas en la nube y optimización de rendimiento."
      />
      <ExperienceItem 
        puesto="Ingeniero de Software" 
        empresa="InnovaSoft" 
        fecha="Abril 2018 - Diciembre 2019" 
        descripcion="Participación en el diseño y desarrollo de sistemas empresariales, con énfasis en la integración de APIs y la automatización de procesos."
      />
    </div>
  </section>
  