---
const { puesto, empresa, fecha, descripcion } = Astro.props;
---
<div class="relative flex items-start gap-8">
  <!-- Punto de la línea -->
  <div class="relative z-10 w-4 h-4 bg-blue-500 rounded-full border border-white dark:border-slate-400"></div>

  <!-- Contenido -->
  <div class="flex flex-col lg:flex-row lg:gap-8 w-full">
    <!-- Información básica -->
    <div class="lg:w-1/3 text-right lg:text-left">
      <h3 class="text-xl font-semibold text-blue-500">{puesto}</h3>
      <p class="text-gray-600">{empresa}</p>
      <p class="text-sm text-gray-500">{fecha}</p>
    </div>
    <!-- Descripción -->
    <div class="lg:w-2/3">
      <p class="text-gray-700 dark:text-gray-300">{descripcion}</p>
    </div>
  </div>
</div>
