---
const { position, enterprise, date, description, technologies } = Astro.props;
---
<div class="relative flex items-start gap-8">
  <div class="relative z-10 w-4 h-4 bg-blue-500 rounded-full border border-gray-700 dark:border-gray-300 shadow shadow-indigo-500"></div>

  <div class="flex flex-col lg:flex-row lg:gap-8 w-full">
    <div class="lg:w-1/3">
      <h3 class="text-xl font-semibold text-blue-500">{position}</h3>
      <p class="text-gray-900 dark:text-gray-100 font-medium tracking-wider">{enterprise}</p>
      <p class="text-sm text-gray-700 dark:text-gray-300 mb-3 lg:mb-0">{date}</p>
    </div>
    <div class="lg:w-2/3">
      <p class="text-gray-700 dark:text-gray-300 mb-3">{description}</p>
      <div class="flex flex-wrap gap-3">
        {
          technologies.map((item: string) => (
            <span class="text-xs py-1 px-3 border border-blue-500 bg-sky-100/50 dark:bg-sky-900/50 rounded-full font-medium shadow">{item}</span>
          ))
        }
      </div>
    </div>
  </div>
</div>
